<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="NormalActivityTheme" parent="AppTheme">
      <item name="android:windowAnimationStyle">@style/AnimationRight.Activity</item>
    </style>
    
    <style name="AnimationRight.Activity" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_right_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_right_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_right_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_right_close_exit</item>
    </style>
</resources>
